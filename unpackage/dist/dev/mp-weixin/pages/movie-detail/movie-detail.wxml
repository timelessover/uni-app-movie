<block wx:if="{{detailMovie}}"><view><view class="movie-header"><view class="movie-background" style="{{(style1)}}"></view><view class="movie-mask"></view><view class="movie-content"><view class="movie-poster" style="{{(style1)}}"></view><view class="movie-info"><view class="movie-name line-ellipsis">{{detailMovie.nm}}</view><view class="movie-ename line-ellipsis">{{detailMovie.enm}}</view><block wx:if="{{detailMovie.globalReleased}}"><view><block wx:if="{{detailMovie.sc}}"><view><view class="movie-score line-ellipsis">{{''+detailMovie.sc+''}}</view><view class="score-num line-ellipsis">{{"("+detailMovie.snum+"万人评分)"}}</view></view></block><block wx:else><view class="no-score">暂无评分</view></block></view></block><block wx:else><view class="movie-score">{{detailMovie.wish+"人想看"}}</view></block><view class="movie-category line-ellipsis"><view>{{detailMovie.cat}}</view><block wx:if="{{detailMovie.version}}"><view class="tag-box"><text class="tag-d">{{detailMovie.version[0]}}</text><block wx:if="{{detailMovie.version[1]}}"><text class="tag-imax">{{detailMovie.version[1]}}</text></block></view></block></view><view class="movie-time line-ellipsis">{{detailMovie.src+" / "+detailMovie.dur+"分钟"}}</view><view class="movie-time line-ellipsis">{{detailMovie.pubDesc}}</view></view></view></view></view></block>