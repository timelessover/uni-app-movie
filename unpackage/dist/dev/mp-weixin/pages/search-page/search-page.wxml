<view class="search-wrapper"><view class="search-header topbar"><input class="search-input" placeholder-class="phcolor" placeholder="{{placeholder}}" data-event-opts="{{[['input',[['__set_model',['','value','$event',[]]]]]]}}" value="{{value}}" bindinput="__e"/><text class="iconfont icon-sousuo"></text><view data-event-opts="{{[['tap',[['goBack',['$event']]]]]}}" class="cancel" bindtap="__e">取消</view></view><view class="result-list"><block wx:if="{{movies.length}}"><view class="movie-box"><view class="title">电影/电视剧/综艺</view>=`/pages/movie-detail/movie-detail?movieId=${movie.id}`><image class="movie-img" src="{{movie.img}}"></image><view class="movie-info"><view class="movie-name line-ellipsis">{{movie.nm+''}}<text class="{{['version',movie.version]}}"></text></view><view class="line-ellipsis">{{movie.enm}}</view><view class="line-ellipsis">{{movie.cat}}</view><view class="line-ellipsis">{{movie.rt}}</view></view><view class="score"><block wx:if="{{movie.sc}}"><text class="grade">{{movie.sc+"分"}}</text></block><block wx:else><text>暂无评分</text></block></view></view></block><block wx:if="{{cinemas.length}}"><view><view class="title">影院</view><block wx:for="{{cinemas}}" wx:for-item="cinema" wx:for-index="item" wx:key="id"><cinema-section vue-id="{{'1-'+item}}" cinema="{{cinema}}" bind:__l="__l"></cinema-section></block></view></block></view><view hidden="{{!(!isEmpty)}}"><empty vue-id="2" message="没有找到相关内容" bind:__l="__l"></empty></view></view>