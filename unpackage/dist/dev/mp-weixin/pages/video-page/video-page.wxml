<block wx:if="{{info&&current!==-1}}"><view><view class="video-box"><video id="my-video" src="{{videoList[current].videourl}}" autoplay data-event-opts="{{[['ended',[['endHandle',['$event']]]],['error',[['errorHandle',['$event']]]]]}}" bindended="__e" binderror="__e"></video></view><scroll-view class="my-scroll" scroll-y><view class="movie-intro-desc"><view class="name-box"><view class="name">{{info.movieName}}</view><block wx:if="{{info.version}}"><view class="tag-box"><text class="tag-d">{{info.version[0]}}</text><block wx:if="{{info.version[1]}}"><text class="tag-imax">{{info.version[1]}}</text></block></view></block></view><view class="sc-box"><block wx:if="{{info.globalReleased}}"><view><block wx:if="{{info.sc}}"><view>猫眼评分<text class="yellow">{{info.sc}}</text></view></block><block wx:else><view>暂无评分</view></block></view></block><block wx:else><view><text class="yellow">{{info.wish}}</text>人想看</view></block></view><view class="release">{{info.release}}</view><view data-event-opts="{{[['tap',[['goTo',['$event']]]]]}}" class="buy-tickets" bindtap="__e"><block wx:if="{{info.showst===3}}"><view class="btn">购票</view></block><block wx:else><block wx:if="{{info.showst===1}}"><view class="btn want-see">想看</view></block><block wx:else><block wx:if="{{info.showst===4}}"><view class="btn pre-sale">预售</view></block></block></block></view></view><block wx:if="{{videoList.length}}"><view class="list-box"><view class="play-title">{{"播放列表 （"+videoList.length+"）"}}</view><block wx:for="{{videoList}}" wx:for-item="item" wx:for-index="index" wx:key="*this"><view data-event-opts="{{[['tap',[['selectItem',[index]]]]]}}" class="video-item" bindtap="__e"><view class="img-box"><image src="{{item.videoImg}}" mode="aspectFill"></image><block wx:if="{{current===index}}"><view class="txt">播放中</view></block></view><view class="{{['video-name',[(current===index)?'red':'']]}}">{{item.videoName}}</view></view></block></view></block></scroll-view></view></block>