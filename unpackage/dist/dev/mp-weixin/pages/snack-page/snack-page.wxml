<view class="container"><view class="image-box"><image src="{{info.dealBrief.imageUrl}}" mode="aspectFill"></image><view class="info-box"><view class="cinema-name line-ellipsis">{{cinemaName}}</view><view class="snack-title line-ellipsis">{{info.dealBrief.title}}</view></view><view class="mask"></view></view><view class="section"><view class="price-box"><view><block wx:if="{{info.dealBrief.originPrice}}"><text class="price-num">{{info.dealBrief.originPrice}}<text class="yuan">元</text></text></block><block wx:if="{{info.dealBrief.value}}"><text class="cinema-price">{{"影院价:"+info.dealBrief.value+"元"}}</text></block></view><view data-event-opts="{{[['tap',[['buySnack',['$event']]]]]}}" class="buy-btn" bindtap="__e">立即抢购</view></view><view class="price-box"><view class="deal-tags-list"><block wx:if="{{info.dealBrief.refundTag.supportTimeRefund}}"><text class="item"><text class="text-icon"></text>随时退</text></block><block wx:if="{{info.dealBrief.refundTag.supportExpireRefund}}"><text class="item"><text class="text-icon"></text>过期退</text></block></view><view class="sold"><text class="iconfont icon-04"></text><text>{{info.dealBrief.curNumberDesc}}</text></view></view></view><view class="section"><view class="section-title">套餐详情</view><block wx:for="{{info.dealBrief.menus}}" wx:for-item="item" wx:for-index="index" wx:key="*this"><view class="dealsets-details"><block wx:if="{{item.title}}"><view class="set-title">{{item.title}}</view></block><block wx:for="{{item.items}}" wx:for-item="item" wx:for-index="index" wx:key="*this"><view class="detail-group"><text class="right line-ellipsis">{{item.name}}</text><text class="center line-ellipsis">{{item.amount}}</text><text class="left">{{"¥"+item.subtotal}}</text></view></block></view></block></view><view class="purchase-notice section"><view class="section-title">购买须知</view><view class="terms"><block wx:for="{{info.dealBrief.terms}}" wx:for-item="item" wx:for-index="index" wx:key="*this"><view class="terms-item"><block wx:if="{{item.title}}"><view class="tip-title">{{item.title+":"}}</view></block><view class="tip-des">{{item.content}}</view></view></block></view></view><view class="section"><view class="section-title">影院信息</view><cinema-map vue-id="1" cinemaData="{{cinemaData}}" bind:__l="__l"></cinema-map></view></view>