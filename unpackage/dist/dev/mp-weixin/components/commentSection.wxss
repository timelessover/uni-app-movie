.commentSection {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding: 30rpx 0 0 30rpx;
  color: #555;
}
.avatar {
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
}
.left {
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
      -ms-flex-positive: 1;
          flex-grow: 1;
  margin-left: 40rpx;
  padding-right: 30rpx;
  border-bottom: 1px solid #e6e6e6;
  padding-bottom: 30rpx;
}
.commentSection:last-child .left {
  border: none;
}
.nickName {
  font-size: 24rpx;
  color: #444;
}
.buy {
  display: inline-block;
  border-radius: 2px;
  color: #fff;
  background: #f90;
  font-size: 22rpx;
  margin-left: 5px;
  padding: 1px 2px;
}
.commentSection .movie-star {
  width: 22rpx;
  height: 22rpx;
  margin-right: 3px;
}
.content {
  font-size: 30rpx;
  margin: 20rpx 0;
}
