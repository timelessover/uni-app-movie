<navigator class="cinema-section" url="{{url}}"><view class="name-price line-ellipsis">{{cinema.nm+''}}<block wx:if="{{cinema.sellPrice}}"><text class="sell-price"><text class="price">{{cinema.sellPrice}}</text>元起</text></block></view><view class="address"><text class="line-ellipsis">{{cinema.addr}}</text><text class="distance">{{cinema.distance}}</text></view><view class="feature-tags"><block wx:if="{{cinema.endorse||cinema.tag.endorse}}"><text>退</text></block><block wx:if="{{cinema.allowRefund||cinema.tag.allowRefund}}"><text>改签</text></block><block wx:for="{{cinema.hallType||cinema.tag.hallType}}" wx:for-item="item" wx:for-index="index" wx:key="*this"><text>{{item}}</text></block><block wx:if="{{cinema.snack||cinema.tag.snack}}"><text class="featrue">小吃</text></block><block wx:if="{{cinema.vipDesc||cinema.tag.vipTag}}"><text class="featrue">{{cinema.vipDesc||cinema.tag.vipTag}}</text></block></view><block wx:if="{{!!cinema.promotion.cardPromotionTag}}"><view><text class="card"></text><text class="discount-label-text">{{cinema.promotion.cardPromotionTag}}</text></view></block><block wx:if="{{cinema.showTimes}}"><view class="showTimes">{{"近期场次："+cinema.showTimes}}</view></block></navigator>